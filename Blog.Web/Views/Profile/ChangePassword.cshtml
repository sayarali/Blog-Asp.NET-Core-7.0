@model ChangePasswordDto
@{
    ViewData["Title"] = "Parolayı Değiştir";
}

<div class="container col-10 col-lg-6 mt-5">
    <div class="card rounded-5 p-4">
        <form asp-controller="Profile" asp-action="ChangePassword" method="post" enctype="multipart/form-data" id="changePasswordForm">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="mb-3">
                <label for="currentPassword">Mevcut Parola: </label>
                <input asp-for="CurrentPassword" class="form-control" type="password" id="currentPassword" name="currentPassword" value="@Model.CurrentPassword" autocomplete="new-password" />
            </div>
            <div class="mb-3">
                <label for="newPassword">Yeni Parola: </label>
                <input asp-for="NewPassword" class="form-control" type="password" id="newPassword" name="newPassword" value="@Model.NewPassword" />
            </div>
            <div class="mb-3">

                <label for="confirmPassword">Parolayı Onayla: </label>
                <input asp-for="ConfirmPassword" class="form-control" type="password" id="confirmPassword" name="confirmPassword" value="@Model.ConfirmPassword" />
            </div>

            <div class="mb-3">
                <button class="btn save-btn d-grid w-100" type="submit">Kaydet</button>
            </div>
        </form>
    </div>

</div>


